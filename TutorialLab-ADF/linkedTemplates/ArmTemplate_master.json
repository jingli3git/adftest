{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "TutorialLab-ADF"
		},
		"tutorial1adlsgen2storage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'tutorial1adlsgen2storage'"
		},
		"tutorial1adlsgen2storage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://tutoriallab.dfs.core.windows.net/"
		},
		"BlobEventTrigger_properties_RecursivelyReadingDatafromADLS_parameters_foldername": {
			"type": "string",
			"defaultValue": "@triggerBody().folderPath"
		},
		"BlobEventTrigger_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/77eb781b-2934-49ae-ad99-a2e3293717fd/resourceGroups/Tutorial1/providers/Microsoft.Storage/storageAccounts/tutoriallab"
		},
		"SharedSHIR_properties_typeProperties_linkedInfo_resourceId": {
			"type": "string",
			"defaultValue": "/subscriptions/77eb781b-2934-49ae-ad99-a2e3293717fd/resourcegroups/Tutorial1/providers/Microsoft.DataFactory/factories/Dev-Lab/integrationruntimes/AzureVMStandaloneSHIR"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "TutorialLab-ADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"tutorial1adlsgen2storage_accountKey": {
						"value": "[parameters('tutorial1adlsgen2storage_accountKey')]"
					},
					"SharedSHIR_properties_typeProperties_linkedInfo_resourceId": {
						"value": "[parameters('SharedSHIR_properties_typeProperties_linkedInfo_resourceId')]"
					},
					"tutorial1adlsgen2storage_properties_typeProperties_url": {
						"value": "[parameters('tutorial1adlsgen2storage_properties_typeProperties_url')]"
					},
					"BlobEventTrigger_properties_RecursivelyReadingDatafromADLS_parameters_foldername": {
						"value": "[parameters('BlobEventTrigger_properties_RecursivelyReadingDatafromADLS_parameters_foldername')]"
					},
					"BlobEventTrigger_properties_typeProperties_scope": {
						"value": "[parameters('BlobEventTrigger_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}